@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "Regisztrálás";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Új felhasználó regisztrálása.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-2 form-floating mb-2">
                    <label asp-for="Input.NamePrefix"></label>
                    <input asp-for="Input.NamePrefix" class="form-control" autocomplete="nameprefix"/>
                    <span asp-validation-for="Input.NamePrefix" class="text-danger"></span>
                </div>
                <div class="col-5 form-floating mb-2">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="col-5 form-floating mb-2">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-6 form-floating mb-2">
                    <label asp-for="Input.Country"></label>
                    <input asp-for="Input.Country" class="form-control" autocomplete="country" aria-required="true" />
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
                <div class="col-6 form-floating mb-2">
                    <label asp-for="Input.City"></label>
                    <input asp-for="Input.City" class="form-control" autocomplete="city" aria-required="true" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-3 form-floating mb-2">
                    <label asp-for="Input.ZipCode"></label>
                    <input asp-for="Input.ZipCode" class="form-control" autocomplete="zipcode" aria-required="true" />
                    <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                </div>
                <div class="col-9 form-floating mb-2">
                    <label asp-for="Input.Street"></label>
                    <input asp-for="Input.Street" class="form-control" autocomplete="street" aria-required="true" />
                    <span asp-validation-for="Input.Street" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating mb-2">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Regisztrálás</button>
        </form>
    </div>
